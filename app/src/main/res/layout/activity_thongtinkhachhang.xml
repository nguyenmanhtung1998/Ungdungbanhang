<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Thông tin khách hàng"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/EdittextTenkhachhang"
                android:inputType="text"
                android:hint="Nhập tên khách hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/Edittextsodienthoai"
                android:inputType="number"
                android:hint="Nhập số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/emailkhachhang"
                android:layout_margin="5dp"
                android:inputType="textEmailAddress"
                android:hint="Nhập địa chỉ email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_margin="15dp"
        android:id="@+id/buttonxacnhan"
        android:textSize="15sp"
        android:background="#E91E63"
        android:textColor="@color/mauchuden"
        android:text="Xác nhận"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
    </Button>
    <Button
        android:layout_margin="15dp"
        android:id="@+id/buttontrove"
        android:textSize="15sp"
        android:background="#E91E63"
        android:textColor="@color/mauchuden"
        android:text="Trở về"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
    </Button>
</LinearLayout>
    </LinearLayout>
</LinearLayout>